#!/usr/bin/env bash
# This script configures Nginx on a fresh Ubuntu server (web-01 and web-02).
# It ensures HTTP responses contain a custom header: X-Served-By, displaying the server's hostname.

# Exit script on errors
set -e

# Update system and install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Configure firewall
sudo ufw allow 'Nginx HTTP'
sudo ufw allow 'OpenSSH'

# Ensure web root directory exists and create an index.html file
sudo mkdir -p /var/www/html
echo 'Hello World!' | sudo tee /var/www/html/index.html

# Configure Nginx with the custom header
sudo tee /etc/nginx/sites-available/default > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    # Custom header to track which server is responding
    add_header X-Served-By "\$HOSTNAME";
}
EOF

# Restart Nginx to apply changes
sudo systemctl restart nginx
