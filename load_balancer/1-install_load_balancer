#!/usr/bin/env bash
# This script installs and configures HAProxy on lb-01
# It sets up load balancing between web-01 and web-02 using the roundrobin algorithm

# Exit on error
set -e

# Install HAProxy (on macOS, using Homebrew)
brew install haproxy

# Start HAProxy via Homebrew services
brew services start haproxy
# Backup existing HAProxy config
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Configure HAProxy to distribute traffic using roundrobin
tee /etc/haproxy/haproxy.cfg > /dev/null <<EOF
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web-01 3.84.95.54:80 check
    server web-02 3.82.241.91:80 check

EOF

# Restart HAProxy to apply changes
systemctl restart haproxy

# Output the required web server names
echo '["web-01", "web-02"]'
