#!/usr/bin/env bash
# Setup HAProxy on server lb-01 to serve web-01 and web-02.

set -e  # Exit immediately if a command fails

# Update and install HAProxy
sudo apt-get update -y
sudo apt-get install -y haproxy

# Ensure web-01 and web-02 are resolvable by adding them to /etc/hosts
echo "3.84.95.54 web-01" | sudo tee -a /etc/hosts
echo "3.82.241.91 web-02" | sudo tee -a /etc/hosts

# Configure HAProxy
sudo tee /etc/haproxy/haproxy.cfg > /dev/null <<EOL
frontend lb-frontend
    bind *:80
    mode http
    default_backend lb-backend

backend lb-backend
    balance roundrobin
    server web-01 web-01:80 check
    server web-02 web-02:80 check
EOL

# Enable HAProxy
echo "ENABLED=1" | sudo tee /etc/default/haproxy

# Restart HAProxy
sudo systemctl enable haproxy
sudo systemctl restart haproxy

echo "HAProxy setup complete!"
